---
import { links } from './data';
import { HeaderLink, HeaderLogo } from './ui';
import { Menu } from './ui/Menu';
---

<header
  class="fixed left-0 right-0 top-0 z-10 flex h-16 justify-center bg-header"
>
  <div
    class="container flex flex-row items-center justify-between gap-10 px-10 py-2 laptop:justify-around"
  >
    <HeaderLogo />
    <nav class="hidden tablet:block">
      <ul class="flex flex-row gap-1 text-2xl">
        {
          links.map(({ href, label }) => {
            return <HeaderLink client:load href={href}>{label}</HeaderLink>;
          })
        }
      </ul>
    </nav>
    <Menu client:load/>
  </div>
</header>
