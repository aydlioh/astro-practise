---
import HeaderLink from './ui/HeaderLink.astro';
import HeaderLogo from './ui/HeaderLogo.astro';
import { links } from './data';
---

<header class="bg-header fixed left-0 right-0 top-0 z-10 flex justify-center h-16">
  <div
    class="container flex flex-row items-center justify-around gap-10 px-10 py-2"
  >
    <HeaderLogo />
    <nav>
      <ul class="flex flex-row gap-1 text-2xl">
        {
          links.map(({ href, label }) => {
            return <HeaderLink href={href}>{label}</HeaderLink>;
          })
        }
      </ul>
    </nav>
  </div>
</header>
