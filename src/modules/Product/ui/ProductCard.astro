---
import type { IProduct } from '../models';
import ProductCardDescription from './ProductCardDescription.astro';
import ProductCardImage from './ProductCardImage.astro';

interface Props {
  product: IProduct;
}

const { product } = Astro.props;
---

<a href={`/product/${product.id}`}>
  <div
    class="group relative cursor-pointer overflow-hidden rounded-md shadow-md"
  >
    <ProductCardImage image={product.images[0]} title={product.title} />
    <ProductCardDescription {...product} />
  </div>
</a>
