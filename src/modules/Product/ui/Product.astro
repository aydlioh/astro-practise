---
import { Button, Chip } from '@/shared/ui/react';
import type { IProduct } from '../models';
import ProductImages from './ProductImages.astro';

interface Props {
  product: IProduct;
}

const { product } = Astro.props;
---

<div class="mx-auto flex max-w-[900px] flex-col justify-center gap-5">
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-thin">{product.title}</h1>
    <p class="text-2xl text-green-500">{product.price}$</p>
  </div>
  <ProductImages {...product} />
  <div class="flex flex-row items-center justify-between">
    <Chip>#{product.category.name}</Chip>
    <h1 class="mt-5 text-end text-2xl font-thin">{product.title}</h1>
  </div>
  <p>{product.description}</p>
  <Button client:load className="w-[200px] self-start">Купить</Button>
</div>
